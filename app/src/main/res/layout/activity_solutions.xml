<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/R1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="#FFFFFF"
    tools:context=".Activity.Solutions">

        <RelativeLayout
            android:id="@+id/titlebar1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#a8d5ed">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="solutions"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/black"
                android:textSize="22dp"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/L1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/titlebar1"
            android:background="#FFFFFF"
            android:orientation="horizontal">

        </RelativeLayout>

    <ScrollView
        android:id="@+id/mScrollView"
        android:layout_width="398dp"
        android:layout_height="570dp"
        android:layout_below="@id/L1"
        android:layout_marginTop="-93dp">

        <RelativeLayout
            android:id="@+id/L2"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:background="#FFFFFF"
            android:orientation="vertical">
            <!--Light Blue Color-->
            <TextView
                android:id="@+id/questionno"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginLeft="20dp"
                android:text="no"
                android:textColor="@android:color/black"
                android:textSize="22dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Quen"
                android:textColor="@android:color/black"
                android:textSize="22dp" />


            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="278dp"
                android:layout_height="232dp"
                android:layout_below="@id/question"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:textAlignment="center">

                <RadioButton
                    android:id="@+id/option1"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_centerHorizontal="true"
                    android:text="Option1"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/option2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_centerHorizontal="true"
                    android:text="Option2"
                    android:textSize="20dp" />


                <RadioButton
                    android:id="@+id/option3"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_centerHorizontal="true"
                    android:text="Option3"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/option4"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:text="Option4"
                    android:textSize="20dp" />


            </RadioGroup>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@id/radio_group"
                android:text="Explanation"
                android:textColor="#7E57C2"
                android:textSize="22dp">


            </TextView>

            <TextView
                android:id="@+id/explanationtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="7dp"
                android:text=" you get Explanation for each and every question"
                android:textColor="#7E57C2"
                android:textSize="22dp">

            </TextView>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/L3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lowerborder"
        android:layout_marginBottom="2dp"
        android:background="#FFFFFF">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="#a8d5ed"
            android:onClick="next"
            android:text="NEXT"
            android:textSize="20dp">

        </Button>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lowerborder"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="2dp"
        android:background="#a8d5ed">




            </RelativeLayout>
           </RelativeLayout>