<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/action_bar_header_fragment_level" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/bg_grey"
        android:paddingStart="@dimen/padding_20dp"
        android:paddingEnd="@dimen/padding_20dp">


        <TextView android:layout_marginTop="@dimen/padding_20dp"
            style="@style/subHeaderTitle15dpNormal"
            android:text="Your password must be 8 to 16 characters with 1 number, 1 alphabet &amp; symbol"
            android:background="@color/bg_grey"/>


        <com.example.questionpaper.Common.CustomEditText
            android:id="@+id/edtOldPassword"
            style="@style/subHeaderTitle15dpNormal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding_30dp"
            />

        <com.example.questionpaper.Common.CustomEditText
            android:id="@+id/edtNewPassword"
            style="@style/subHeaderTitle15dpNormal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding_20dp"
            />


        <com.example.questionpaper.Common.CustomEditText
            android:id="@+id/edtConfirmPassword"
            style="@style/subHeaderTitle15dpNormal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding_20dp"
            />


        <TextView android:layout_marginTop="@dimen/padding_50dp"
            android:id="@+id/tvChangePassword"
            style="@style/customButtonStyle"
            android:minWidth="@dimen/min_single_button_width"
            android:background="@drawable/box_border_blue_bg"
            android:text="Change Password"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>