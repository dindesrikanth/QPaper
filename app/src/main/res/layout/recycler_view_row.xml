<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/quest"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:background="#FFFFFF"
        android:text="Quention"
        android:textColor="@android:color/black"
        android:textSize="22dp"
        android:padding="10dp">

    </TextView>
    <TextView
        android:id="@+id/responcetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
    android:id="@+id/responcetxt2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_below ="@id/responcetxt"
        android:layout_marginStart="10dp">

</TextView>



    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quest"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF"
        android:textAlignment="center"
        android:padding="30dp">

        <RadioButton
            android:id="@+id/A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="A"
            android:text="Option1"
            android:textSize="20dp" >

        </RadioButton>


        <RadioButton
            android:id="@+id/B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="B"
            android:text="Option2"
            android:textSize="20dp" >

        </RadioButton>


        <RadioButton
            android:id="@+id/C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="C"
            android:text="Option3"
            android:textSize="20dp" >

        </RadioButton>

        <RadioButton
            android:id="@+id/D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="D"
            android:text="Option4"
            android:textSize="20dp" >

        </RadioButton>

        <RadioButton
            android:id="@+id/E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="E"
            android:text="OptionE"
            android:textSize="20dp" >

        </RadioButton>


    </RadioGroup>
</LinearLayout>
</ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary" >

    </View>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/clear"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:background="#a8d5ed"
        android:text="Clear respose"
        android:textAlignment="center" >
    </Button>
    <Button
        android:id="@+id/mark"
        android:layout_width="102dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="4dp"
        android:background="#a8d5ed"
        android:text="Mark for Review"
        android:textAlignment="center" />
</LinearLayout>

</LinearLayout>