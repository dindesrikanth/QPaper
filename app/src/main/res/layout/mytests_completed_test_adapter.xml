<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    style="@style/adapterRootProperty">

    <LinearLayout
        style="@style/adapterChildProperty"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            style="@style/adapterChildProperty" >

            <TextView
                style="@style/subHeaderTitle15dpNormal"
                android:id="@+id/tvTestName"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                tools:text="Test Name"
                android:gravity="start"
                android:background="@color/white"/>
            <TextView
                style="@style/subHeaderTitle15dpNormal"
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                tools:text="Date"
                android:background="@color/white"/>
            <TextView
                style="@style/subHeaderTitle15dpNormal"
                android:id="@+id/tvTime"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                tools:text="Time"
                android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
            style="@style/adapterChildProperty"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDetailedAnalysis"
                style="@style/customButtonStyle"
                android:background="@drawable/box_border_blue_bg"
                android:text="Analysis"
                android:paddingStart="@dimen/padding_15dp"
                android:paddingEnd="@dimen/padding_15dp"/>

            <TextView android:layout_marginStart="@dimen/padding_20dp"
                android:id="@+id/tvLeaderBoard"
                style="@style/customButtonStyle"
                android:background="@drawable/box_border_blue_bg"
                android:text="Leader Board"
                android:paddingStart="@dimen/padding_15dp"
                android:paddingEnd="@dimen/padding_15dp"/>
            <TextView
                android:id="@+id/tvReviews"
                style="@style/customButtonStyle"
                android:background="@drawable/box_border_blue_bg"
                android:text="Reviews"  android:layout_marginStart="@dimen/padding_20dp"
                android:paddingStart="@dimen/padding_15dp"
                android:paddingEnd="@dimen/padding_15dp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>

