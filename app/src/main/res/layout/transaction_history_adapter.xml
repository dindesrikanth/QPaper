<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    style="@style/adapterRootProperty">

    <ImageView
        android:layout_width="@dimen/padding_50dp"
        android:layout_height="@dimen/padding_50dp"
        android:src="@drawable/ic_correct"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/padding_10dp">


        <TextView android:id="@+id/tvOrderId"
            style="@style/subHeaderTitle15dpBold"
            tools:text="#1234567"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/tvType"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_height="wrap_content"
                tools:text="Wallet Recharge of R500"
                android:background="@color/white"
                android:layout_marginTop="@dimen/padding_5dp"
                />

        </LinearLayout>


        <TextView android:id="@+id/tvDate"
            style="@style/subHeaderTitle15dpNormal"
            android:layout_height="wrap_content"
            tools:text="09-09-2021"
            android:background="@color/white"
            android:layout_marginTop="@dimen/padding_5dp"
            />


    </LinearLayout>



</LinearLayout>