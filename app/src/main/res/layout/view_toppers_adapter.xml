<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    style="@style/adapterRootProperty"
    android:layout_marginStart="@dimen/padding_5dp"
    android:layout_marginEnd="@dimen/padding_5dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/padding_15dp"
        android:paddingBottom="@dimen/padding_15dp">

        <ImageView
            android:layout_width="@dimen/padding_50dp"
            android:layout_height="@dimen/padding_50dp"
            android:src="@drawable/ic_correct"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/padding_10dp">


            <TextView android:id="@+id/tvRank"
                style="@style/subHeaderTitle15dpBold"
                tools:text="#1"
                />

            <TextView android:id="@+id/tvUserName"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_height="wrap_content"
                tools:text="Group 2"
                android:background="@color/white"
                android:layout_marginTop="@dimen/padding_5dp"
                />


        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>