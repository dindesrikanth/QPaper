<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fragmentRootProperty"
    android:scrollbars="none"
    tools:context=".Screens.mytest.DetailsAnalysisFragment">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTestName"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="Test Name"
                android:background="@color/bg_grey">
            </TextView>

            <TextView
                android:id="@+id/tvTestNameValue"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.5"
                android:layout_width="0dp" 
                tools:text="Physics Q1"
                android:background="@color/bg_grey"
                android:gravity="end"/>
        </LinearLayout>
        <LinearLayout android:layout_marginTop="@dimen/padding_15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
             <TextView
                android:id="@+id/tvRank"
                 style="@style/subHeaderTitle15dpNormal"
                 android:layout_weight="0.5"
                 android:layout_width="0dp"
                 android:text="Rank"
                 android:background="@color/bg_grey"/> 

            <TextView
                android:id="@+id/tvRankValue"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                tools:text="12451"
                android:background="@color/bg_grey"
                android:gravity="end"/>
 
        </LinearLayout>
        <LinearLayout  android:layout_marginTop="@dimen/padding_15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvScore"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="Score"
                android:background="@color/bg_grey"/>
            

            <TextView
                android:id="@+id/tvScoreValue"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                tools:text="458"
                android:background="@color/bg_grey"
                android:gravity="end"/>

        </LinearLayout>
        <LinearLayout  android:layout_marginTop="@dimen/padding_15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvExplnVideo"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:text="Solution/Expln video"
                android:background="@color/bg_grey"/>

            <TextView
                android:id="@+id/tvPurchase"
                style="@style/customButtonStyle"
                android:background="@drawable/box_border_blue_bg"
                android:layout_weight="0.3"
                android:layout_width="0dp" 
                android:text="Purchase"
                android:gravity="center" />

        </LinearLayout>
        <LinearLayout  android:layout_marginTop="@dimen/padding_15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAmountWon"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="Amount Won"
                android:background="@color/bg_grey"/>

            <TextView
                android:id="@+id/tvAmountValue"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                tools:text="123456"
                android:background="@color/bg_grey"
                android:gravity="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/padding_20dp">

            <TextView
                android:id="@+id/tvDetailedAnalysis"
                style="@style/customButtonStyle"
                android:background="@drawable/box_border_blue_bg"
                android:text="Detailed Analysis"
                android:gravity="center"/>

        </LinearLayout>


        <include layout="@layout/recyclerview_common_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" 
            android:layout_marginTop="@dimen/padding_15dp"/>

    </LinearLayout>
</ScrollView>