<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    style="@style/adapterRootProperty">

    <LinearLayout
        android:orientation="horizontal"
        style="@style/adapterChildProperty" >
        <TextView
            style="@style/subHeaderTitle15dpNormal"
            android:id="@+id/tvTestName"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            tools:text="Test"
            android:background="@color/white">
        </TextView>
        <TextView
            style="@style/subHeaderTitle15dpNormal"
            android:id="@+id/tvCourseName"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            tools:text="Course name"
            android:background="@color/white">
        </TextView>
        <TextView
            android:id="@+id/tvTakeTest"
            style="@style/customButtonStyle"
            android:background="@drawable/box_border_blue_bg"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:text="@string/take_test" />
    </LinearLayout>

</androidx.cardview.widget.CardView>

