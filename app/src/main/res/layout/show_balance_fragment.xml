<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:fillViewport="true"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/action_bar_header_fragment_level" />

        <LinearLayout
            style="@style/fragmentRootProperty"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_border_layout">

                    <TextView
                        style="@style/subHeaderTitle15dpLightGrayNormal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="TOTAL BALANCE" />
                    <TextView
                        android:id="@+id/tvTotalBalance"
                        style="@style/subHeaderTitle15dpNormal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        tools:text="147" />

                    <TextView
                        android:id="@+id/tvAddCash"
                        style="@style/customButtonStyle"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:background="@drawable/box_border_blue_bg"
                        android:text="@string/add_cash" />

                <View android:layout_marginTop="@dimen/padding_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_1dp"
                    android:background="@color/grey"/>

                    <TextView
                        style="@style/subHeaderTitle15dpLightGrayNormal"
                        android:layout_marginTop="@dimen/padding_20dp"
                        android:text="AMOUNT ADDED(UNUTILISED)"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvAddedBalance"
                            style="@style/subHeaderTitle15dpNormal"
                            android:layout_width="@dimen/padding_0dp"
                            android:layout_weight="0.9"
                            tools:text="10" />

                        <ImageView
                            android:id="@+id/imgAmountAdded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_info"/>

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_1dp"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:background="@color/grey" />

                    <TextView
                        style="@style/subHeaderTitle15dpLightGrayNormal"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:text="WINNINGS"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvWinningsBalance"
                            style="@style/subHeaderTitle15dpNormal"
                            android:layout_width="@dimen/padding_0dp"
                            android:layout_weight="0.9"
                            tools:text="10" />

                        <ImageView
                            android:id="@+id/imgWinnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:src="@drawable/ic_info"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_1dp"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:background="@color/grey" />

                    <TextView android:layout_marginTop="@dimen/padding_10dp"
                        style="@style/subHeaderTitle15dpLightGrayNormal"
                        android:text="REWARD BONUS"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvRewardBonus"
                            style="@style/subHeaderTitle15dpNormal"
                            android:layout_width="@dimen/padding_0dp"
                            android:layout_weight="0.9"
                            tools:text="10" />

                        <ImageView
                            android:id="@+id/imgReward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:src="@drawable/ic_info"/>

                    </LinearLayout>

            </LinearLayout>
            <LinearLayout android:layout_marginTop="@dimen/padding_10dp"
                android:id="@+id/lnrRecentTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:background="@drawable/custom_border_layout">
                <TextView
                    style="@style/subHeaderTitle15dpNormal"
                    android:layout_width="@dimen/padding_0dp"
                    android:layout_weight="0.9"
                    android:text="My Recent Transactions"
                    android:minHeight="@dimen/padding_40dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/padding_30dp"
                    android:minHeight="@dimen/padding_30dp"
                    android:src="@drawable/ic_right_gray"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout android:layout_marginTop="@dimen/padding_10dp"
                android:layout_width="match_parent"
                 android:layout_height="wrap_content" android:orientation="horizontal"
                android:background="@drawable/custom_border_layout">
                <LinearLayout
                    android:id="@+id/lnrManagePayments"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        style="@style/subHeaderTitle15dpNormal"
                        android:text="Manage Payments" />
                    <TextView android:layout_marginTop="@dimen/padding_5dp"
                        style="@style/subHeaderTitle15dpLightGrayNormal"
                        android:text="Add/remove cards, wallets etc."/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/padding_30dp"
                    android:minHeight="@dimen/padding_30dp"
                    android:src="@drawable/ic_right_gray"
                    android:layout_gravity="center"/>

            </LinearLayout>


            <LinearLayout android:layout_marginTop="@dimen/padding_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical"
                android:background="@drawable/custom_border_layout">

                <LinearLayout
                    android:id="@+id/lnrKycDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/subHeaderTitle15dpNormal"
                        android:layout_width="@dimen/padding_0dp"
                        android:layout_weight="0.9"
                        android:layout_height="match_parent"
                        android:text="KYC Details" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/padding_30dp"
                        android:minHeight="@dimen/padding_30dp"
                        android:src="@drawable/ic_right_gray"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout android:layout_marginTop="@dimen/padding_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:background="@drawable/custom_border_layout">
                <LinearLayout
                    android:id="@+id/lnrReferAndEarn"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/subHeaderTitle15dpNormal"
                        android:text="Refer and Earn" />
                    <TextView android:layout_marginTop="@dimen/padding_5dp"
                        style="@style/subHeaderTitle15dpLightGrayNormal"
                        android:text="Invite a friend and earn up to â‚¹200 each bonus" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/padding_30dp"
                    android:minHeight="@dimen/padding_30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_right_gray"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>



</ScrollView>

