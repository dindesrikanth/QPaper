<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/adapterRootProperty"
    android:id="@+id/lnrRootLayout"
    android:layout_marginTop="@dimen/padding_0dp"
    android:layout_marginBottom="@dimen/padding_0dp">


    <LinearLayout
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/tvHeaderTitle"
            style="@style/subHeaderTitle15dpBold"
            android:layout_width="@dimen/padding_0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            tools:text="UPSC" />

        <ImageView android:id="@+id/imgArrow"
            android:layout_width="@dimen/padding_40dp"
            android:layout_height="@dimen/padding_40dp"
            android:src="@drawable/ic_arrow_drop_down"
            />
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dashboard_grey"/>


</LinearLayout>