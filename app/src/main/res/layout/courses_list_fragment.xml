<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/fragmentRootProperty"
    android:paddingStart="@dimen/padding_0dp"
    android:paddingEnd="@dimen/padding_0dp">


     <TextView android:background="@color/bg_grey"
         style="@style/headerTitle20dpBold"
         android:text="Which Exams You are Preparing for?"
         android:textColor="@color/test_button_blue"
         android:gravity="center"
         android:layout_marginStart="@dimen/padding_20dp"
         android:layout_marginEnd="@dimen/padding_20dp"/>


    <include layout="@layout/recyclerview_common_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0dp"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/padding_20dp"
        android:layout_marginTop="@dimen/padding_20dp"/>

    <TextView
        android:id="@+id/tvSubmit"
        style="@style/buttonDisableStyle"
        android:background="@drawable/box_border_grey_bg"
        android:text="Submit"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_gravity="center"/>
</LinearLayout>