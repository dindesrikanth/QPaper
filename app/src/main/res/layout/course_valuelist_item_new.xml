<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/box_border_white_bg"
    android:orientation="vertical"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/test_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="5"
            android:text="SSC JHT 2020 : Full Mock Test"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:textSize="18sp"
            android:textStyle="bold" />
    <RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/box_border_green_bg"
    android:layout_weight="1">
        <TextView
            android:id="@+id/test_fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_border_green_bg"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="10"
            android:drawableLeft="@drawable/icon_rupee_resize"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:typeface="serif"/>
    </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:gravity="left">

            <TextView
                android:id="@+id/total_prize_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total Prize"
                android:textColor="@color/black"
                android:typeface="serif"
                />

            <TextView
                android:id="@+id/total_prize_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:text="10,00,000"
                android:drawableLeft="@drawable/icon_rupee_resize"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:typeface="serif"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:gravity="left">

                <TextView
                    android:id="@+id/question_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100"
                    android:textColor="@color/black"
                    android:typeface="serif"
                    />

                <TextView
                    android:id="@+id/question_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:text="Qs ."
                    android:textColor="@color/black"
                    android:typeface="serif"
                    />

                <TextView
                    android:id="@+id/minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="90"
                    android:textColor="@color/black"
                    android:typeface="serif"
                    />

                <TextView
                    android:id="@+id/minutes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:text="mins ."
                    android:textColor="@color/black"
                    android:typeface="serif"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/prize_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/icon_prize_gold"
                />

            <TextView
                android:id="@+id/price_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:text="1,00,000"
                android:drawableLeft="@drawable/icon_rupee_resize"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:typeface="serif"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:gravity="right">

            <TextView
                android:id="@+id/time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="8 PM"
                android:textColor="@color/black"
                android:typeface="serif"
                />

            <TextView
                android:id="@+id/date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:gravity="right"
                android:text="24 Jul 2020"
                android:textColor="@color/black"
                android:typeface="serif"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:gravity="right">

                <TextView
                    android:id="@+id/slots_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="50,000"
                    android:textColor="@color/black"
                    android:typeface="serif"
                    />

                <TextView
                    android:id="@+id/slots_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:text="Slots"
                    android:textColor="@color/black"
                    android:typeface="serif"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/light_grey"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:padding="10dp"
            android:text="Ends in 2 days"
            android:textColor="@color/black"
            android:drawablePadding="5dp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/test_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/box_border_blue_bg"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:text="Enroll"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:typeface="serif"/>
    </LinearLayout>
</LinearLayout>
