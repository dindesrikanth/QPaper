<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical">
    <TextView
        android:id="@+id/tvSpinnerText"
        style="@style/subHeaderTitle15dpNormal"
        android:minWidth="@dimen/minimum_spinner_width"
        android:layout_width="@dimen/padding_0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="Demo"
        android:layout_alignParentStart="true"
        android:background="@color/bg_grey"
        android:paddingStart="@dimen/padding_5dp"
        android:paddingEnd="@dimen/padding_10dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/ic_arrow_drop_down" /><!--Make sure image is present in Drawable folder-->

</LinearLayout>