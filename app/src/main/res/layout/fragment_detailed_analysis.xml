<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    tools:context=".Screens.mytest.DetailedAnalysis.DetailedAnalysisFragment">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <include layout="@layout/action_bar_header_fragment_level" />

        <LinearLayout android:layout_marginTop="@dimen/padding_30dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/padding_20dp"
            android:layout_marginEnd="@dimen/padding_20dp">
            <TextView
                style="@style/subHeaderTitle15dpNormal"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="Test Name">
            </TextView>

            <TextView
                android:id="@+id/tvTestNameValue"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.5"
                android:layout_width="0dp" 
                tools:text="Physics Q1"
                android:gravity="end"/>
        </LinearLayout>
        <LinearLayout android:layout_marginTop="@dimen/padding_15dp"
            android:layout_marginStart="@dimen/padding_20dp"
            android:layout_marginEnd="@dimen/padding_20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
             <TextView
                 style="@style/subHeaderTitle15dpNormal"
                 android:layout_weight="0.5"
                 android:layout_width="0dp"
                 android:text="Rank"/>

            <TextView
                android:id="@+id/tvRankValue"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                tools:text="12451"
                android:gravity="end"/>
 
        </LinearLayout>
        <LinearLayout  android:layout_marginTop="@dimen/padding_15dp"
            android:layout_marginStart="@dimen/padding_20dp"
            android:layout_marginEnd="@dimen/padding_20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="Score"/>
            

            <TextView
                android:id="@+id/tvScoreValue"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                tools:text="458"
                android:gravity="end"/>

        </LinearLayout>

        <LinearLayout  android:layout_marginTop="@dimen/padding_15dp"
            android:layout_marginStart="@dimen/padding_20dp"
            android:layout_marginEnd="@dimen/padding_20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="Amount Won"/>

            <TextView
                android:id="@+id/tvAmountValue"
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                tools:text="123456"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout  android:layout_marginTop="@dimen/padding_15dp"
            android:layout_marginStart="@dimen/padding_20dp"
            android:layout_marginEnd="@dimen/padding_20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:text="Solution/ Explanation video"/>

            <TextView
                android:id="@+id/tvPurchase"
                style="@style/customButtonStyle"
                android:background="@drawable/box_border_blue_bg"
                android:layout_weight="0.3"
                android:layout_width="0dp" 
                android:text="Purchase"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_20dp"
            android:layout_marginStart="@dimen/padding_20dp"
            android:layout_marginEnd="@dimen/padding_20dp">
            <TextView
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:text="Key &amp; Explanation"/>

            <TextView
                android:id="@+id/tvView"
                style="@style/customButtonStyle"
                android:layout_width="@dimen/padding_0dp"
                android:layout_weight="0.3"
                android:background="@drawable/box_border_blue_bg"
                android:text="View" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_20dp"
            android:layout_marginStart="@dimen/padding_20dp"
            android:layout_marginEnd="@dimen/padding_20dp">
            <TextView
                style="@style/subHeaderTitle15dpNormal"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:text="Leader Board"/>

            <TextView
                android:id="@+id/tvLeaderBoardView"
                style="@style/customButtonStyle"
                android:layout_width="@dimen/padding_0dp"
                android:layout_weight="0.3"
                android:background="@drawable/box_border_blue_bg"
                android:text="View" />

        </LinearLayout>

        <TextView android:layout_marginTop="@dimen/padding_20dp"
            style="@style/headerTitle20dpBold"
            android:layout_width="match_parent"
            android:text="Detailed Analysis"
            android:layout_gravity="center"
            android:gravity="center" />

        <include layout="@layout/recyclerview_common_layout"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent" 
            android:layout_marginTop="@dimen/padding_15dp"
            android:layout_marginStart="@dimen/padding_20dp"
            android:layout_marginEnd="@dimen/padding_20dp"/>

    </LinearLayout>
</ScrollView>